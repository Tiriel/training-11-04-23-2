{% extends 'base.html.twig' %}

{% block title book is not null ? book.title : 'Not Found' %}

{% block body %}
    <section class="example-wrapper">
        {% if book is not null %}
            <h1>{{ book.title }}</h1>

            <img src="{{ book.cover }}" alt="{{ book.title }} cover" class="float-end">
            <ul>
                <li>Id : {{ book.id }}</li>
                <li>ISBN : {{ book.isbn }}</li>
                <li>Author : {{ book.author ?? 'Unknown' }}</li>
                <li>Plot : {{ book.plot }}</li>
                <li>Released At : {{ book.releasedAt|date('d M Y') }}</li>
            </ul>
        {% else %}
            <h1>Book not found</h1>
        {% endif %}
    </section>
{% endblock %}
